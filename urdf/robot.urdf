<robot name="sphere_pusher">

<!--Base Link-->
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.5 0.3 0.1"/> <!--Base dimensions in metres-->
            </geometry>
            <material name="blue">
                <color rgba="0 0 1 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.5 0.3 0.1"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="5"/>
            <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </inertial>
    </link>

<!--Left Wheel-->
    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.05"/> <!--Wheel dimensions in metres-->
            </geometry>
            <origin rpy="1.5708 0 0" xyz="0 0 0"/>
            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.05"/>
            </geometry>
            <origin rpy="1.5708 0 0" xyz="0 0 0"/>
        </collision>
        <inertial>
            <mass value="0.5"/>
            <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </inertial>
    </link>

    <joint name="left_wheel_joint" type="revolute">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="-0.2 0.176 -0.04" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit lower="0" upper="6.2832" effort="100" velocity="10"/>
    </joint>

<!--Right Wheel-->
    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.05"/> <!--Wheel dimensions in metres-->
            </geometry>
            <origin rpy="1.5708 0 0" xyz="0 0 0"/>
            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.05"/>
            </geometry>
            <origin rpy="1.5708 0 0" xyz="0 0 0"/>
        </collision>
        <inertial>
            <mass value="0.5"/>
            <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </inertial>
    </link>

    <joint name="right_wheel_joint" type="revolute">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="-0.2 -0.176 -0.04" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit lower="0" upper="6.2832" effort="100" velocity="10"/>
    </joint>

<!--Castor Wheel-->
    <link name="castor_wheel">
        <visual>
            <geometry>
                <sphere radius="0.03"/> <!--Wheel dimensions in metres-->
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.03"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.2"/>
            <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </inertial>
    </link>

    <joint name="castor_wheel_joint" type="fixed">
        <parent link="base_link"/>
        <child link="castor_wheel"/>
        <origin xyz="0.17 0 -0.04" rpy="0 0 0"/>
    </joint>

</robot>
