<robot name="sphere_pusher">

<!--Base Link-->
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.5 0.3 0.1"/> <!--Base dimensions in metres-->
            </geometry>
            <material name="blue">
                <color rgba ="0 0 1 1"/>
            </material>
        </visual>
    </link>


<!--Left Wheel-->
    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.1"/> <!--Base dimensions in metres-->
            </geometry>
            <material name="black">
                <color rgba ="0 0 0 1"/>
            </material>
        </visual>
    </link>

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="-0.2 0.15 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>
</robot>